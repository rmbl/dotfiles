[color]
  branch = auto
  diff = auto
  status = auto
  ui = true

[color "branch"]
  current = yellow reverse
  local = yellow
  remote = green

[color "diff"]
  meta = yellow bold
  frag = magenta bold
  old = red bold
  new = green bold

[color "status"]
  added = yellow
  changed = green
  untracked = cyan

[user]
  name = Philipp Gildein
  email = philipp@gildein.com

[alias]
  lg = log --color --graph --pretty=format:'%Cred%h%Creset -%C(yellow)%d%Creset %s %Cgreen(%cr) %C(bold blue)<%an>%Creset' --abbrev-commit
  ci = commit
  co = checkout
  pl = pull

[push]
  default = simple

[core]
  excludesfile = ~/.gitignore_global
	fileMode = false
	autocrlf = true
